<h1><%= @list.name %></h1>

<% if @list.photo.present? %>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <p>No photo available</p>
<% end %>

<% if @list.bookmarks.any? %>
  <h2>Movies in this List:</h2>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <%= bookmark.movie.title %>: <%= bookmark.comment %>
        (<%= link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: :delete, confirm: 'Are you sure?' } %>)
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No movies in this list yet.</p>
<% end %>

<!-- Link to Add a New Bookmark to This List -->
<%= link_to 'Add Movie to List', new_bookmark_path(list_id: @list.id) %>


<!-- Back to All Lists -->
<%= link_to 'Back to All Lists', lists_path %>
