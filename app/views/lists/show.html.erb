<div class="hero-header">
  <% if @list.photo.present? %>
    <%= cl_image_tag @list.photo.key, crop: :fill, class: "hero-image" %>
    <h1 class="hero-title"><%= @list.name %></h1>
  <% else %>
    <p>No photo available</p>
  <% end %>
</div>


<div class="container">
  <% if @list.bookmarks.any? %>
    <br>
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 border-radius-custom">
            <% if bookmark.movie.poster_url.present? %>
              <%= image_tag bookmark.movie.poster_url, class: "card-img-top border-radius-custom-top" %>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= bookmark.movie.title %></h5>
              <p class="card-text"><%= bookmark.comment %></p>
              <div class="mt-auto">
                <%= link_to 'Remove', bookmark_path(bookmark), class: 'btn btn-danger', data: { turbo_method: :delete, confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No movies in this list yet.</p>
  <% end %>
</div>


<!-- Link to Add a New Bookmark to This List -->
<%= link_to 'Add Movie to List', new_bookmark_path(list_id: @list.id) %>


<!-- Back to All Lists -->
<%= link_to 'Back to All Lists', lists_path %>
